{
    "name":        "arcanedev/taxonomies",
    "description": "Taxonomies package provides a categories & tags management system for laravel projects.",
    "keywords":    ["arcanedev", "arcanesoft", "laravel", "taxonomies", "categories", "tags"],
    "homepage":    "https://github.com/ARCANEDEV/Taxonomies",
    "authors": [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php":                         ">=5.6.4",
        "arcanedev/support":           "~4.0",
        "arcanedev/laravel-nestedset": "~1.0"
    },
    "require-dev": {
        "phpunit/phpcov":  "~3.0",
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanedev\\Taxonomies\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanedev\\Taxonomies\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "testbench": "composer require --dev \"orchestra/testbench-browser-kit=~3.0\" \"orchestra/database=~3.0\""
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable" : true
}
